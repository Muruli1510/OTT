@model WebApplication1.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        body {
            margin: 0;
            font-family: Arial, Helvetica, sans-serif;
            background-color: #CFECEC;
        }

        .logo {
            display: inline-block;
            vertical-align: top;
            width: 50px;
            height: 48px;
            margin-right: 20px;
            margin-top: 2px; /* if you want it vertically middle of the navbar. */
        }

        .topnav {
            overflow: hidden;
            background-color: #2554C7;
        }

            .topnav a {
                float: left;
                color: #f2f2f2;
                text-align: center;
                padding: 14px 16px;
                text-decoration: none;
                font-size: 17px;
            }

                .topnav a:hover {
                    background-color: #ddd;
                    color: black;
                }

                .topnav a.active {
                    background-color: #04AA6D;
                    color: white;
                }

        .topnav-right {
            float: right;
        }

        .topnav-left {
            float: left;
        }
    </style>
</head>
<body class="body">

    <div class="topnav">
        <div class="topnav-left">
            <a href="/UI/Home">OTT</a>
            <img class="logo" src="~/Photos/OTT1.png" />

        </div>
        <div class="topnav-right">
            <a href="/UI/Login">Login</a>
            <a href="/UI/Registration">Register</a>
        </div>
    </div>
    <div>
        <p style="text-align:center;color:brown">Login</p>
    </div>
    <p style="text-align:center;color:brown">@ViewBag.message</p>
    <div style="text-align:center">
        <form method="post">
            <div class="col-md-10">
                <p>Email</p>
                <input class="form-control" name="email" type="text" required />
                <br />
            </div>
            <div class="col-md-10">
                <p>Password</p>
                <input class="form-control" name="password" type="password" required />
                <br />
            </div>
            <div>
                <p>Remember me</p>
                <input class="checkbox" name="rememberme" type="checkbox" />
            </div>
            <div class="col-md-10">
                <input class="btn-success" value="Login" type="submit" />
                <br />
            </div>
        </form>
    </div>
</body>
</html>

