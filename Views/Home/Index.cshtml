@{
    ViewBag.Title = "Home Page";
}

<!Doctype html>
<html>
<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<h4 style="color:;">Welcome Admin</h4>
<hr />
<body>
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="col-sm-4 col-md-4 col-xs-12">
                <div class="title" style="width:250px;">@item.Movie_name</div>
                @*<hr />*@
                <div class="video-frame">
                    <video style="width:250px; height:150px;" controls>
                        <source src="@Url.Content(@item.Video_path)" type="video/mp4" />
                    </video>
                    <hr />
                </div>
            </div>
        }
    </div>
</body>
</html>

